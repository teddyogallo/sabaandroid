<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Saba.EventDashboard"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="10dp"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tabtitle"
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Initiate Card payment"


                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/businesstitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Share payment request to your customer who will get a notification on whatsapp, facebook, email or phone"

                    android:textColor="@color/black"
                    android:textSize="10sp">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/addbusinessaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/placename"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"

                android:layout_marginEnd="10dp"

                android:src="@drawable/tick">

            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/placename">


                <TextView
                    android:id="@+id/businessaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Enter the amount you want to top up"

                    android:textColor="@color/black"
                    android:textSize="10sp">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/addopeninghours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="gone">


            <ImageView
                android:id="@+id/clockwise"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/darkblue"
                android:src="@drawable/access_time"
                app:tint="@color/darkblue">

            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/clockwise">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"


                    android:text="Add Opening Hours"
                    android:textColor="@color/grey"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/rtk9dvcjwlzf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/s8b868833sw1cr10"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rhbrotd6j775"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/userplaceholder" />
            <EditText
                android:inputType="text"
                android:hint="Enter Amount"
                android:background="@null"
                android:id="@+id/amountrequestedtext"
                android:textColor="#25131A"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="18dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/signinprogress"

                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="192dp"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:gravity="center"
                app:indicatorColor="@color/purplethemelight"
                app:indicatorName="BallTrianglePathIndicator"

                />



        </RelativeLayout>









        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/generatelinkbutton"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"


                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:inputType="textCapCharacters"
                android:text="Top up with card"


                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"

                android:background="@drawable/cr10lr270cd01a2891161"

                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

        </RelativeLayout>





    </LinearLayout>
</ScrollView>