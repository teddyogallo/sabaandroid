<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="40dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"

    android:background="@color/bg_primary">

    <!-- Back Button (Icon + Text) -->
    <LinearLayout
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_l"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:layout_width="@dimen/icon_l"
            android:layout_height="@dimen/icon_l"
            android:src="@drawable/ic_back"
            android:tint="@color/primary_pink"
            android:contentDescription="@string/back"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="@dimen/text_body_large"
            android:textColor="@color/primary_pink"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_s" />

    </LinearLayout>

    <!-- Spacer (DO NOT TOUCH) -->
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/icon_l"
        android:layout_weight="1" />

    <!-- SABA Logo (UNCHANGED) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/icon_m"
            android:layout_height="@dimen/icon_m"
            android:src="@drawable/saba_micro_icon"
            android:contentDescription="@string/saba_logo"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saba"
            android:textSize="@dimen/text_headline_large"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/spacing_s" />
    </LinearLayout>

    <!-- Spacer (DO NOT TOUCH) -->
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/icon_l"
        android:layout_weight="1" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_small"
        android:text="@string/edit"
        android:textColor="@color/text_light"
        android:background="@drawable/bg_pill_button_primary"
        android:paddingStart="@dimen/padding_l"
        android:paddingEnd="@dimen/padding_l"
        android:textSize="@dimen/text_body_large"
        android:textStyle="bold" />

</LinearLayout>
