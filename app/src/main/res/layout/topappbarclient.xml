<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sabaDrawerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar" app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            app:title=""
            app:titleCentered="false"

            app:titleTextAppearance="@style/ToolbarTitleAppearancetwo">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagecircle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/purplelight"
                    android:src="@drawable/person">

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/businessname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/imagecircle"

                    android:ellipsize="end"
                    android:maxLength="15"
                    android:text="My Business"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>


                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                       <!-- <com.github.pavlospt.roundedletterview.RoundedLetterView
                            android:id="@+id/messagenotificationsign"
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_alignParentEnd="true"

                            android:layout_marginStart="1dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/messagesnotificationimagebutton"
                            app:avBgTextColor="@color/green_active"
                            app:avCornerRadius="100dp"
                            app:avFont="font/avenir_black.ttf"
                            app:avTextColor="@color/purplelight"
                            app:avTextSize="9sp" /> -->

                        <ImageView
                            android:id="@+id/messagesnotificationimagebutton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginBottom="14dp"
                            android:src="@drawable/janja_icons_conversation">

                        </ImageView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                       <!-- <com.github.pavlospt.roundedletterview.RoundedLetterView
                            android:id="@+id/generalnotificationsign"
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:layout_alignParentEnd="true"

                            android:layout_marginStart="1dp"

                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@+id/generalnotificationimagebutton"
                            app:avBgTextColor="@color/green_active"
                            app:avCornerRadius="100dp"
                            app:avFont="font/avenir_black.ttf"
                            app:avTextColor="@color/purplelight"
                            app:avTextSize="9sp" /> -->

                        <ImageView
                            android:id="@+id/generalnotificationimagebutton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"


                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="13dp"
                            android:layout_marginBottom="14dp"
                            android:src="@drawable/bellicon">

                        </ImageView>
                    </RelativeLayout>





                </LinearLayout>


            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_sabaclient_drawer" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>