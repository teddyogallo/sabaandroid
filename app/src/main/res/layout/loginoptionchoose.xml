<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splashpurple"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rhe4e9t4nm5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/splashpurple">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ru3blndcp22f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splashpurple"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rq7rl5900ec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="35dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ro57ilj5iaq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rttw2ohmor3"
                        android:layout_width="131dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_logo" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rkicw7dsrlmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="49dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rih4zt2bjvy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rer2w6vdyhnw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/rev4y4kzt20u"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="30dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/rra4wroygzb"
                                    android:textColor="@color/whitesurfacecard"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"

                                    android:text="Welcome to Saba"
                                    />
                                <TextView
                                    android:id="@+id/rmdfk5wxxbo"
                                    android:textColor="#8B8688"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Plan your perfect event.Quickly and easily"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">



                            <com.wang.avi.AVLoadingIndicatorView
                                android:id="@+id/signinprogress"

                                style="@style/AVLoadingIndicatorView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="192dp"
                                android:visibility="gone"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                app:indicatorColor="@color/purplethemelight"
                                app:indicatorName="BallTrianglePathIndicator"

                                />



                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rexcro6pa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/loginlayoutbutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="@drawable/buttonlightpink"
                            android:paddingVertical="16dp"
                            android:layout_marginBottom="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/emailloginshape"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="10dp"
                                android:scaleType="fitXY"
                                android:src="@android:drawable/ic_dialog_email"
                                app:shapeAppearanceOverlay="@style/cr10" />
                            <TextView
                                android:id="@+id/loginbuttontext"
                                android:textColor="@color/brandcolorpurple"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Continue with Email"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ririarhaw1qe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/rdy54afslmp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/rueztyt9ru6"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"
                                    android:background="#338B8688"
                                    android:layout_marginEnd="10dp"
                                    android:orientation="vertical">
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/rd0exfvkt7p6"
                                    android:textColor="#8B8688"
                                    android:textSize="11sp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Or"
                                    />
                                <LinearLayout
                                    android:id="@+id/r6ldopuxhb7a"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"
                                    android:background="#338B8688"
                                    android:orientation="vertical">
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/rm6xaw8entka"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:id="@+id/loginwithfacebooklayoutbutton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:background="@drawable/s8b868833sw1cr10"
                                    android:backgroundTint="@color/whitesurfacecard"
                                    android:paddingVertical="16dp"
                                    android:layout_marginBottom="10dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="horizontal">
                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/rk20lzjgci6o"
                                        app:shapeAppearanceOverlay="@style/cr10"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/facebookloginicon"
                                        android:scaleType="fitXY"
                                        />
                                    <TextView
                                        android:id="@+id/r31bdh8icd68"
                                        android:textColor="#25131A"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Continue with Facebook"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/loginwithgooglelayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:background="@drawable/s8b868833sw1cr10"
                                    android:backgroundTint="@color/verylightpink"
                                    android:paddingVertical="16dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:orientation="horizontal">
                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:id="@+id/rxobgn0t56o7"
                                        app:shapeAppearanceOverlay="@style/cr10"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginEnd="10dp"
                                        android:src="@drawable/googleloginicon"
                                        android:scaleType="fitXY"
                                        />
                                    <TextView
                                        android:id="@+id/ridpgpipphj"
                                        android:textColor="#25131A"
                                        android:textSize="16sp"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Continue with Google"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
