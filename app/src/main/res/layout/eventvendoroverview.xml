<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r07e49es1oljh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r3plcg6lyhel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rcl6cvfjymwr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rup73tgpprkp"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:src="@color/transpar"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:id="@+id/r4537judx2tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backbuttonimage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/backarrow" />

                        <TextView
                            android:id="@+id/eventtitletext"
                            android:layout_width="347dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Event Details"
                            android:textColor="#25131A"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/r5lothie4hku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr10bffffff"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="23dp"
                    android:elevation="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/eventimagedisplay"
                        android:layout_width="91dp"
                        android:layout_height="74dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/defaultimage" />
                    <LinearLayout
                        android:id="@+id/rssf2jsp19lq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/clientname"
                            android:textColor="#25131A"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="User Name"
                            />
                        <LinearLayout
                            android:id="@+id/rw8o8gvosi9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/rdnv0dsbspcm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r8a98oxo0uyw"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/locationsmall" />
                                <TextView
                                    android:id="@+id/eventlocationlabel"
                                    android:textColor="#8B8688"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Maryâ€™s Wedding"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/userratinglayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cr5bfb01600d"
                                android:paddingVertical="6dp"
                                android:paddingHorizontal="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/userratingtext"
                                    android:textColor="#FB0160"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="100% "
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/eventdatelabel"
                            android:textColor="#000000"
                            android:textSize="9sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="28th Dec 2025"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rj0z3ds3jecj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginHorizontal="33dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rjzolyko4lxb"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Budget Allocated/ Deposit Amount"
                        />
                    <LinearLayout
                        android:id="@+id/r4h68bco7ius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/r8fws2r1nghh"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="#8B8688"
                            android:orientation="vertical">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/eventbudgettextlabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0 / $0"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/loadingindicatorlayour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar"

                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="192dp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        app:indicatorColor="@color/purplethemelight"
                        app:indicatorName="BallTrianglePathIndicator"

                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/eventdetailstitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf66986yz1ea"
                        android:textColor="#25131A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Event Details"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/eventdetailsrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="5dp">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/recentactivitiestitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf66986yz1ea22"
                        android:textColor="#25131A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Itemized Budget"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/budgetrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="5dp">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/sendmessagelayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr8lr270a7be2e80d7f40a80"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/sendmessagebuttontext"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Send Message"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/acceptproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr10lr270cd01a2891161"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/acceptproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Accept Proposal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rejectproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/orangesquere"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rejectproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Reject Proposal"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

