<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendors.availabilitycalender"
    >
    <ScrollView
        android:id="@+id/r07e49es1oljh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r3plcg6lyhel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rcl6cvfjymwr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rup73tgpprkp"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:src="@color/transpar"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:id="@+id/r4537judx2tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backbuttonimage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/backarrow" />

                        <TextView
                            android:id="@+id/eventtitletext"
                            android:layout_width="347dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Availability Details"
                            android:textColor="#25131A"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/loadingindicatorlayour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar"

                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="192dp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        app:indicatorColor="@color/purplethemelight"
                        app:indicatorName="BallTrianglePathIndicator"

                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/eventdetailstitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf66986yz1ea"
                        android:textColor="#25131A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="My Availability"
                        />
                </LinearLayout>

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mcv_selectionColor="@color/primary_pink"
                    app:mcv_showOtherDates="all"/>


                <LinearLayout
                    android:id="@+id/acceptproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr10lr270cd01a2891161"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/acceptproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Setup new date range"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rejectproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/orangesquere"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rejectproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Edit Date Range"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

