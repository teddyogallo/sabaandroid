<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/eventlayoutvalues"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/purplerounded"
        android:elevation="25dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">




        <LinearLayout
            android:id="@+id/rzjt4y48dor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventtitle"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:text="Event Title"
                android:textColor="#25131A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rwj20h5pt8na"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rpoq7tmn7xfq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/celltypeicon"
                        android:layout_width="37dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="fitXY"
                        android:src="@color/transpar" />

                    <TextView
                        android:id="@+id/eventlocation"
                        android:layout_width="292dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="Location"
                        android:textColor="#8B8688"
                        android:textSize="10sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/eventdate"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="112dp"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>