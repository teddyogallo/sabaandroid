<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:layout_width="match_parent"

    app:cardCornerRadius="0dp"
    android:layout_marginTop="10dp"


    app:rippleColor="@color/greyweak"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"

    >





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/advertimage"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/personplaceholder">

                </de.hdodenhof.circleimageview.CircleImageView>

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtname"

                            android:layout_width="226dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="Chat Name"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/messagecontent"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="Template message here"
                            android:textColor="@color/greyblue"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/messagetimestamp"

                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:text="Today at 5:30 AM"
                            android:textColor="@color/green_active"
                            android:textSize="7sp"
                            android:textStyle="normal" />


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>





    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>