<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/vendor_itemlayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="6dp"

        >

        <ImageView
            android:id="@+id/vendor_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/vendor_image"
            android:background="@drawable/janjaitemrecyclerbottom" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="3dp">

            <TextView
                android:id="@+id/vendor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vendor_name_placeholder"
                android:textColor="@color/text_dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="3dp">

                <RatingBar
                    android:id="@+id/vendor_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:isIndicator="true"
                    android:scaleX="0.35"
                    android:scaleY="0.35"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_count_placeholder"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="7sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_8">

                <ImageView
                    android:id="@+id/partner_avatar_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:background="@drawable/userprofile"
                    android:contentDescription="@string/partner_avatar"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/partner_avatar_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:background="@drawable/account_circle"
                    android:contentDescription="@string/partner_avatar"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/partner_avatar_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:background="@drawable/personprofilepicture"
                    android:contentDescription="@string/partner_avatar"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/works_well_with"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="7sp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="4dp">

            <Button
                android:id="@+id/chemistry_badge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/badge_height"
                android:text="@string/chemistry_placeholder"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_chemistry_badge"
                android:layout_marginBottom="@dimen/spacing_8"
                android:layout_alignParentTop="true"
                android:enabled="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <ImageView
                    android:id="@+id/availability_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/available"
                    android:src="@drawable/yessign" />

                <TextView
                    android:id="@+id/availability_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/green_checkmark"
                    android:textSize="9sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>