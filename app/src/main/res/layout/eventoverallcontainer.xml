<!-- In your activity_main.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_event_twin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg_primary">

    <!-- Event Twin UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Wedding & Reception Title with On Track Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m"
            android:paddingTop="@dimen/padding_m"
            android:paddingBottom="@dimen/spacing_m">

            <TextView
                android:id="@+id/eventoverviewlabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Overview"
                android:textSize="@dimen/text_headline_large"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />



        </LinearLayout>

        <!-- Countdown Card -->
        <include layout="@layout/component_countdown_card_details" />

        <!-- Metric Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Timeline Health Card -->
            <LinearLayout
                android:id="@+id/timelinehealthlayoutcard"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_m"
                android:background="@drawable/bg_metric_card"
                android:layout_margin="@dimen/spacing_s"
                android:elevation="@dimen/elevation_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_l"
                        android:layout_height="@dimen/icon_l"
                        android:src="@drawable/ic_clock"
                        android:contentDescription="@string/timeline_icon"
                        android:tint="@color/chart_yellow"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <TextView
                        android:id="@+id/timelinehealthlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Services Booked"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_m" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="15sp"
                        android:textColor="@color/primary_pink"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="3 Pending"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />


                </LinearLayout>





            </LinearLayout>

            <!-- Vendor Readiness Card -->
            <LinearLayout
                android:id="@+id/vendorreadinesscardlayout"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_m"
                android:background="@drawable/bg_metric_card"
                android:layout_margin="@dimen/spacing_s"
                android:elevation="@dimen/elevation_card">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_l"
                        android:layout_height="@dimen/icon_l"
                        android:src="@drawable/ic_vendor"
                        android:contentDescription="@string/timeline_icon"
                        android:tint="@color/chart_yellow"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <TextView
                        android:id="@+id/vendorscontactedlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendors Contacted"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_m" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="15sp"
                        android:textColor="@color/primary_pink"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="3 Pending"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />


                </LinearLayout>

            </LinearLayout>

            <!-- Budget Health Card -->
            <LinearLayout
                android:id="@+id/budgethealthcardlayout"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_m"
                android:background="@drawable/bg_metric_card"
                android:layout_margin="@dimen/spacing_s"
                android:elevation="@dimen/elevation_card">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_l"
                        android:layout_height="@dimen/icon_l"
                        android:src="@drawable/ic_budget"
                        android:contentDescription="@string/timeline_icon"
                        android:tint="@color/chart_yellow"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <TextView
                        android:id="@+id/budgetamounttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$100/$100"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_m" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60%"
                        android:textSize="15sp"
                        android:textColor="@color/primary_pink"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Planned"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Feed Tab Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m"
            android:paddingTop="@dimen/padding_m"
            android:paddingBottom="@dimen/spacing_m"
            android:background="@color/bg_primary">

            <TextView
                android:id="@+id/nextactionslabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next Actions"
                android:textSize="@dimen/text_headline_large"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />



        </LinearLayout>

        <!-- Action Feed Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m">

            <!-- Item 1: Timeline Adjustment -->

            <!-- Item 2: Draft Quote -->

            <!-- Item 3: DJ Rush Mode -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventoverviewrecycleralerts"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                 />

        </LinearLayout>

        <!-- View All Button -->
        <Button
            android:id="@+id/eventoverviewviewallbutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:text="@string/view_all"
            android:textColor="@color/text_light"
            android:background="@drawable/bg_pill_button_primary"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            android:layout_margin="@dimen/padding_m" />

        <!-- Bottom Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_m" />


    </LinearLayout>

</FrameLayout>
