<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rbjao276b3wq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rz1j4odsswzc"
                android:layout_width="match_parent"
                android:layout_height="843dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/backbuttonimage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/backarrow" />
                <HorizontalScrollView
                    android:id="@+id/roy1tv5pyyrm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/r3g7bl1ggip3"
                            android:layout_width="62dp"
                            android:layout_height="4dp"
                            android:background="@drawable/cr10lr270cd01a2891161"
                            android:layout_marginEnd="13dp"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rfjtb1vd5gor"
                            android:layout_width="62dp"
                            android:layout_height="4dp"
                            android:background="@drawable/cr10lr270cd01a2891161"
                            android:layout_marginEnd="13dp"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/r4p98vj46dsi"
                            android:layout_width="62dp"
                            android:layout_height="4dp"
                            android:background="@drawable/cr10lr270cd01a2891161"
                            android:layout_marginEnd="13dp"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rjrz72ji5s0d"
                            android:layout_width="62dp"
                            android:layout_height="4dp"
                            android:background="@drawable/cr10lr270cd01a2891161"
                            android:layout_marginEnd="13dp"
                            android:orientation="vertical">
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rnzxfbekarmr"
                            android:layout_width="62dp"
                            android:layout_height="4dp"
                            android:background="@drawable/cr10ba7be2e"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:id="@+id/r1sowordaam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rvj9s4to25f"
                        android:textColor="#25131A"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="108dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Finalise Setup"
                        />
                    <TextView
                        android:id="@+id/rk04hwjtb05a"
                        android:textColor="#8B8688"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="277dp"
                        android:text="Review the Event Setup details, Selected vendors and add an event image"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rcmaar737wl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="22dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/serviceselectedlayout"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/circlebordercolour">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/selectedradioview"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            app:cardCornerRadius="50dp">

                            <ImageView
                           android:id="@+id/addeventimage"
                            android:layout_width="73dp"
                            android:layout_height="73dp"
                            android:layout_marginEnd="26dp"
                            android:src="@drawable/defaultimage"
                            android:scaleType="fitXY"
                            />

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/rb4andttzxo5"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="26dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Add event image"
                        />
                    <LinearLayout
                        android:id="@+id/rmrkoweas9yl"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rg0zdmskqtyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="38dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ru7cyt1dtr9a"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Budget Allocated/ Budget Remaining"
                        />
                    <LinearLayout
                        android:id="@+id/rwx9ohicer7m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ryw0vn2lz2lo"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="#8B8688"
                            android:orientation="vertical">
                        </LinearLayout>
                        <TextView
                            android:id="@+id/budgetallocatedtext"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="$0 / $0"
                            />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressindicator"

                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="192dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:visibility="gone"
                        app:indicatorColor="@color/purplethemelight"
                        app:indicatorName="BallTrianglePathIndicator"

                        />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    tools:ignore="ExtraText">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectableoptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r55abfc5pwdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/nextbuttonselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/cr10lr270cd01a2891161"
                        android:paddingVertical="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/nextbuttontext"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Next"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
