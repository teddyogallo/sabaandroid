<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_m"
    android:background="@drawable/bg_metric_card"
    android:layout_margin="@dimen/spacing_m"
    android:elevation="@dimen/elevation_card">

    <!-- Header with Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_m">

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="@dimen/icon_m"
            android:layout_height="@dimen/icon_m"
            android:src="@drawable/ic_warning"
            android:contentDescription="@string/action_icon"
            android:tint="@color/warning_orange"
            android:layout_marginEnd="@dimen/spacing_m" />

        <TextView
            android:id="@+id/action_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_title"
            android:textSize="@dimen/text_headline"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/icon_s"
            android:layout_height="@dimen/icon_s"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="@string/expand"
            android:tint="@color/text_tertiary" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/action_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_description"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="@dimen/spacing_m" />

    <!-- Optional Action Button -->
    <Button
        android:id="@+id/action_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_medium"
        android:text="@string/action_button"
        android:textColor="@color/text_light"
        android:background="@drawable/bg_pill_button_secondary"
        android:textSize="@dimen/text_body_large"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/spacing_m" />

</LinearLayout>