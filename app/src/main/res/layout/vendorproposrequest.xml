<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r07e49es1oljh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r3plcg6lyhel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rcl6cvfjymwr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rup73tgpprkp"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:src="@color/transpar"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:id="@+id/r4537judx2tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backbuttonimage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/backarrow" />

                        <TextView
                            android:id="@+id/eventtitletext"
                            android:layout_width="347dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Event Details"
                            android:textColor="#25131A"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/vendor_itemlayout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingEnd="6dp"

                        >

                        <ImageView
                            android:id="@+id/vendor_image"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/vendor_image"
                            android:background="@drawable/janjaitemrecyclerbottom" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="5dp"
                            android:paddingEnd="3dp">

                            <TextView
                                android:id="@+id/vendor_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/vendor_name_placeholder"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="3dp">

                                <RatingBar
                                    android:id="@+id/vendor_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:isIndicator="true"
                                    android:scaleX="0.35"
                                    android:scaleY="0.35"
                                    android:layout_marginEnd="2dp" />

                                <TextView
                                    android:id="@+id/review_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/review_count_placeholder"
                                    android:textColor="@color/text_dark_gray"
                                    android:textSize="7sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/spacing_8">

                                <ImageView
                                    android:id="@+id/partner_avatar_1"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginEnd="@dimen/spacing_8"
                                    android:background="@drawable/userprofile"
                                    android:contentDescription="@string/partner_avatar"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:id="@+id/partner_avatar_2"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginEnd="@dimen/spacing_8"
                                    android:background="@drawable/account_circle"
                                    android:contentDescription="@string/partner_avatar"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:id="@+id/partner_avatar_3"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginEnd="@dimen/spacing_8"
                                    android:background="@drawable/personprofilepicture"
                                    android:contentDescription="@string/partner_avatar"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/works_well_with"
                                    android:textColor="@color/text_dark_gray"
                                    android:textSize="7sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingStart="4dp">

                            <Button
                                android:id="@+id/chemistry_badge"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/badge_height"
                                android:text="@string/chemistry_placeholder"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bg_chemistry_badge"
                                android:layout_marginBottom="@dimen/spacing_8"
                                android:layout_alignParentTop="true"
                                android:enabled="false" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="20dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp">

                                <ImageView
                                    android:id="@+id/availability_check"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="@string/available"
                                    android:src="@drawable/yessign" />

                                <TextView
                                    android:id="@+id/availability_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/available"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/green_checkmark"
                                    android:textSize="9sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/rj0z3ds3jecj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:layout_marginHorizontal="33dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rjzolyko4lxb"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Budget Allocated/ Deposit Amount"
                        />
                    <LinearLayout
                        android:id="@+id/r4h68bco7ius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/r8fws2r1nghh"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            android:background="#8B8688"
                            android:orientation="vertical">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/eventbudgettextlabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$0 / $0"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/loadingindicatorlayour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar"

                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="192dp"
                        android:visibility="gone"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        app:indicatorColor="@color/purplethemelight"
                        app:indicatorName="BallTrianglePathIndicator"

                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/eventdetailstitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf66986yz1ea"
                        android:textColor="#25131A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Vendor Capabilities"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/eventdetailsrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="5dp">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/recentactivitiestitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rf66986yz1ea22"
                        android:textColor="#25131A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Vendor Availability"
                        />
                </LinearLayout>

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_gravity="center_horizontal"
                    app:mcv_selectionColor="@color/primary_pink"
                    app:mcv_showOtherDates="all"
                    android:layout_marginTop="5dp"

                    android:layout_marginBottom="20dp"
                    />



                <LinearLayout
                    android:id="@+id/sendmessagelayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr8lr270a7be2e80d7f40a80"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/sendmessagebuttontext"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Send Message"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/acceptproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cr10lr270cd01a2891161"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/acceptproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Withdraw Proposal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rejectproposallayoutbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/orangesquere"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rejectproposalbuttontext"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Reject Proposal"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

